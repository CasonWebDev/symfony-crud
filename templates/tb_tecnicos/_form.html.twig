{{ form_start(form) }}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.cpf, 'CPF') }}
                        {{ form_widget(form.cpf, {'attr': {'class': 'form-control','data-mask':'000.000.000-00'}, 'required':false}) }}
                        <small class="text-danger">{{ form_errors(form.cpf) }}</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.nome_completo, 'Nome Completo') }}
                        {{ form_widget(form.nome_completo, {'attr': {'class': 'form-control'}, 'required':false}) }}
                        <small class="text-danger">{{ form_errors(form.nome_completo) }}</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.dt_nasc, 'Data de Nascimento') }}
                        {{ form_widget(form.dt_nasc, {'attr': {'class': 'form-control'}, 'required':false, 'type':'date'}) }}
                        <small class="text-danger">{{ form_errors(form.dt_nasc) }}</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label>{{ form_label(form.valor_hora, 'Valor Hora') }}</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                            <div class="input-group-text">R$</div>
                            </div>
                            {{ form_widget(form.valor_hora, {'attr': {'class': 'form-control','data-mask':'#.##0,00','data-mask-reverse':'true'}, 'required':false}) }}
                        </div>
                        <small class="text-danger">{{ form_errors(form.valor_hora) }}</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
{{ form_end(form) }}
