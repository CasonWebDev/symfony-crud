{% extends 'base.html.twig' %}

{% block title %}Técnicos{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex">
        Técnicos
        <div class="ml-auto">
            <a href="{{ path('tb_tecnicos_new') }}">
                <button type="button" class="btn btn-outline-success">
                    <span class="text-nowrap"><i class="fa fa-plus" aria-hidden="true"></i> Adicionar Técnico</span>
                </button>
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>CPF</th>
                    <th>Nome Completo</th>
                    <th>Data de Nascimento</th>
                    <th>Valor Hora</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
            {% for tb_tecnico in tb_tecnicos %}
                <tr>
                    <td>{{ tb_tecnico.cpf }}</td>
                    <td>{{ tb_tecnico.nomeCompleto }}</td>
                    <td>{{ tb_tecnico.dtNasc ? tb_tecnico.dtNasc|date('d/m/Y') : '' }}</td>
                    <td>{{ tb_tecnico.valorHora|price(2, ',', '.') }}</td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('tb_tecnicos_edit', {'id': tb_tecnico.id}) }}"><i class="edit-icon fa fa-pencil" aria-hidden="true" title="Editar"></i></a>
                            {{ include('tb_tecnicos/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Nenhum registro encontrado</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
