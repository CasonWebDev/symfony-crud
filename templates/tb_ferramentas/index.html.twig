{% extends 'base.html.twig' %}

{% block title %}Ferramentas{% endblock %}

{% block breadcrumb %}Ferramentas{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header d-flex">
            Ferramentas
            <div class="ml-auto">
                <a href="{{ path('tb_ferramentas_new') }}">
                    <button type="button" class="btn btn-outline-success">
                        <span class="text-nowrap"><i class="fa fa-plus" aria-hidden="true"></i> Adicionar Ferramenta</span>
                    </button>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ferramenta</th>
                        <th>Marca</th>
                        <th>Valor Hora</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tb_ferramenta in tb_ferramentas %}
                        <tr>
                            <td>{{ tb_ferramenta.nomeFerramenta }}</td>
                            <td>{{ tb_ferramenta.marcaFerramenta }}</td>
                            <td>{{ tb_ferramenta.aluguelHora|price(2, ',', '.') }}</td>
                            <td>
                                <div class="d-flex">
                                    <a href="{{ path('tb_ferramentas_edit', {'cod_ferramenta': tb_ferramenta.getCodFerramenta}) }}"><i class="edit-icon fa fa-pencil" aria-hidden="true" title="Editar"></i></a>
                                    {{ include('tb_ferramentas/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">Nenhum registro encontrado</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
