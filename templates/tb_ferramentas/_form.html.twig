{{ form_start(form) }}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.nome_ferramenta, 'Nome') }}
                        {{ form_widget(form.nome_ferramenta, {'attr': {'class': 'form-control'}, 'required':false}) }}
                        <small class="text-danger">{{ form_errors(form.nome_ferramenta) }}</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.marca_ferramenta, 'Marca') }}
                        {{ form_widget(form.marca_ferramenta, {'attr': {'class': 'form-control'}, 'required':false}) }}
                        <small class="text-danger">{{ form_errors(form.marca_ferramenta) }}</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label>{{ form_label(form.aluguel_hora, 'Aluguel Hora') }}</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                            <div class="input-group-text">R$</div>
                            </div>
                            {{ form_widget(form.aluguel_hora, {'attr': {'class': 'form-control','data-mask':'#.##0,00','data-mask-reverse':'true'}, 'required':false}) }}
                        </div>
                        <small class="text-danger">{{ form_errors(form.aluguel_hora) }}</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
{{ form_end(form) }}
